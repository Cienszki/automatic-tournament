rules_version = '2';
      
service firebase.storage {
  match /b/tournament-tracker-f35tb-uploads/o {
    // Allow public read access to all files.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to upload to the "upload-test-team" directory for testing purposes.
    match /screenshots/upload-test-team/{fileName} {
      allow write: if request.auth != null
                   && request.resource.size < 2 * 1024 * 1024 // 2MB limit
                   && request.resource.contentType.matches('image/.*');
    }

    // Allow authenticated users to upload to their team's screenshot folder.
    // Also, ensure the uploaded file is an image and not too large.
    match /screenshots/{teamName}/{fileName} {
      allow write: if request.auth != null
                   && request.resource.size < 2 * 1024 * 1024 // 2MB limit
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
