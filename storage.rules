rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /screenshots/{teamId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /team-logos/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /standin-screenshots/{fileName} {
      allow read: if true; // Allow public read for standin screenshots (for admin verification)
      allow write: if request.auth != null; // Allow authenticated users to upload their standin screenshots
    }
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
  }
}
